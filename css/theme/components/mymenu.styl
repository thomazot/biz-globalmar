.mymenu
    .header &
        @media media-max-lg
            display: none

        .ul--0
            display: flex
            justify-content: flex-start

        .li--0
            margin-bottom: 0

            &.bold .a--0
                font-weight: bold

        .a--0
            display: flex
            justify-content: center
            align-items: center
            overflow: hidden
            padding: 0 8px
            max-width: 100%
            height: 50px
            color: var(--secundary-contrast)
            text-overflow: ellipsis
            white-space: nowrap
            font-weight: light
            font-size: 16px
            line-height: 1
