.products
    .owl-pagination
        display: none

    &__list
        &.carrossel
            .owl-wrapper-outer
                margin: -70px 0
                padding: 70px 0

                &:hover
                    z-index: 100

    &__title
        margin: 30px 0
        color: var(--text)
        text-transform: uppercase
        font-weight: light
        font-size: 26px

        a
            margin-left: 10px
            color: var(--primary-hover)
            text-transform: lowercase
            font-size: 17px
            line-height: 1.2
            @media media-max-sm 
                display: block
                margin-left: 0

    &__name
        display: block
        margin-bottom: 10px
        color: var(--text)
        font-size: 18px
        line-height: 1

        &:hover
            color: var(--text)

    &__case
        position: relative
        padding: 20px
        border-radius: 10px

        &:hover
            .products
                @media media-min-lg
                    &--mini
                        .products__extra
                            visibility: visible
                            opacity: 1
                            transform: translateY(0)

    &--mini
        .products
            &__extra
                position: absolute
                top: calc(100% - 30px)
                left: 0
                visibility: hidden
                padding: 10px 20px
                width: 100%
                border-radius: 0 0 10px 10px
                background: #fff
                opacity: 0
                transition: all .2s ease
                transform: translateY(-10px)